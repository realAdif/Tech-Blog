<div class="card">
  <div class="card-header">
    {{postData.title}}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
        <p> {{postData.post}}.</p>
        <footer class="blockquote-footer">Post made by: <cite title="Source Title">{{postData.user_id}}</cite></footer>  
    </blockquote>  
  </div>
</div>

<br>


{{!-- This is my comment --}}
<form class="new-comment">
  <div class="card-header">
    <h3>Add New Comment</h3>
  </div>
  
  <div class="card-body">
    <input type="hidden" name="post-id" id="comment_input" value="{{postData.id}}" />
    <label class="form-label" for="comment-body">Comment</label>
    <textarea name="comment-body" class="form-input"></textarea>
    <button type="submit" class="btn">Submit</button>
  </div>
</form>

<br>
{{#each comments}}
<div class="card">
    <div class="card-body">
        <blockquote class="blockquote mb-0">
        <p>{{comment}}</p>
        <footer class="blockquote-footer">Post made by: <cite title="Source Title">{{user.name}}</cite></footer>
        </blockquote>  
    </div>
</div>
<br>
{{/each}}

<script src="/js/addComment.js"></script>