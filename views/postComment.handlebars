<div class="card">
  <div class="card-header">
    {{postData.title}}
  </div>
  <div class="card-body">
    <blockquote class="blockquote mb-0">
        <p> {{postData.post}}.</p>
        <footer class="blockquote-footer">Post made by: <cite title="Source Title">{{postData.user_id}}</cite></footer>  
    </blockquote>  
  </div>
</div>

<br>


{{!-- This is my comment --}}
<from class="new-comment">
  <div class="mb-3">
    <input type="text" class="form-control" id="formGroupExampleInput" placeholder="Make Comment :)" id="comment_input">
    <br>
    <button type="submit" class="btn btn-primary btn-md">Post</button>
  </div>
</from>

<br>
{{#each comments}}
<div class="card">
    <div class="card-body">
        <blockquote class="blockquote mb-0">
        <p>{{comment}}</p>
        <footer class="blockquote-footer">Post made by: <cite title="Source Title">Aditya</cite></footer>
        </blockquote>  
    </div>
</div>
{{/each}}

<script src="/js/addComment.js"></script>